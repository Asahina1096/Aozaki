{
  "name": "aozaki",
  "version": "1.0.0",
  "description": "A modern web application framework built with Astro, React, TailwindCSS and shadcn/ui",
  "type": "module",
  "scripts": {
    "prepare": "panda codegen && panda cssgen --outfile styled-system/styles.css",
    "dev": "astro dev",
    "build": "panda cssgen --outfile styled-system/styles.css && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "rm -rf dist .astro node_modules/.cache *.zip && astro check",
    "check:all": "bun run check && bun run biome:check",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "clean": "rm -rf dist .astro node_modules/.cache *.zip",
    "clean:all": "rm -rf dist .astro node_modules/.cache node_modules bun.lock *.zip"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/react": "4.4.1",
    "@iconify/react": "^6.0.2",
    "@radix-ui/react-slot": "^1.2.4",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vercel/speed-insights": "^1.2.0",
    "astro": "5.15.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.552.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@pandacss/dev": "^1.4.3",
    "@types/node": "24.7.2",
    "babel-plugin-react-compiler": "1.0.0"
  },
  "packageManager": "bun@1.3.1"
}
