{
  "name": "aozaki",
  "version": "1.0.0",
  "description": "A modern Komari theme built with Astro, React, TailwindCSS and shadcn/ui",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "package": "bash scripts/package.sh",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "rm -rf dist .astro node_modules/.cache *.zip && astro check",
    "check:all": "bun run check && bun run biome:check",
    "clean": "rm -rf dist .astro node_modules/.cache *.zip",
    "clean:all": "rm -rf dist .astro node_modules/.cache node_modules bun.lock *.zip"
  },
  "dependencies": {
    "@astrojs/check": "0.9.5",
    "@astrojs/react": "4.4.2",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vercel/speed-insights": "^1.2.0",
    "astro": "5.15.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "0.553.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "24.7.2",
    "babel-plugin-react-compiler": "1.0.0",
    "tw-animate-css": "^1.4.0"
  },
  "packageManager": "bun@1.3.2"
}
