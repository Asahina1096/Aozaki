{
  "name": "aozaki",
  "version": "1.0.0",
  "description": "A modern Komari theme built with Astro, React, TailwindCSS and shadcn/ui",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "package": "bash scripts/package.sh",
    "package:win": "powershell -ExecutionPolicy Bypass -File scripts/package.ps1",
    "lint": "eslint . --ext .js,.ts,.tsx,.astro --cache --cache-location node_modules/.cache/eslint/.eslintcache --max-warnings=0 || true",
    "lint:fix": "eslint . --ext .js,.ts,.tsx,.astro --cache --cache-location node_modules/.cache/eslint/.eslintcache --fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,astro,json,css,md}\" --cache --cache-location node_modules/.cache/prettier/.prettiercache",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,astro,json,css,md}\" --cache --cache-location node_modules/.cache/prettier/.prettiercache",
    "check": "rm -rf dist .astro node_modules/.cache *.zip && astro check",
    "check:all": "bun run check && bun run lint && bun run format:check",
    "clean": "rm -rf dist .astro node_modules/.cache *.zip",
    "clean:all": "rm -rf dist .astro node_modules/.cache node_modules bun.lock *.zip"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/react": "4.4.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.1.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "astro": "5.14.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.546.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@iconify/react": "^6.0.2",
    "@tailwindcss/vite": "^4.1.14",
    "@types/node": "24.7.2",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9.17.0",
    "eslint-plugin-astro": "^1.2.4",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "7.0.0",
    "prettier": "^3.4.0",
    "prettier-plugin-astro": "^0.14.0",
    "tw-animate-css": "^1.4.0",
    "typescript-eslint": "^8.18.0"
  },
  "packageManager": "bun@1.3.0"
}
