---
import "@/styles/globals.css";
import SpeedInsights from "@vercel/speed-insights/astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Aozaki",
  description = "A modern web application framework.",
} = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="light dark" />
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/site.webmanifest" />
    <title>{title}</title>
    <!--
      主题脚本：必须在 <head> 中内联执行，避免 FOUC (Flash of Unstyled Content)
      is:inline 指令确保脚本在 HTML 解析前同步执行，防止主题闪烁
    -->
    <script is:inline>
      (function () {
        const STORAGE_KEY = "appearance";
        const mediaQuery = window.matchMedia("(prefers-color-scheme: dark)");
        const root = document.documentElement;

        const isValid = (value) =>
          value === "light" || value === "dark" || value === "system";

        function getStoredMode() {
          const stored = localStorage.getItem(STORAGE_KEY);
          return isValid(stored) ? stored : "system";
        }

        function resolveMode(mode) {
          return mode === "system"
            ? mediaQuery.matches
              ? "dark"
              : "light"
            : mode;
        }

        function dispatch(mode) {
          window.dispatchEvent(
            new CustomEvent("aozaki-theme-change", {
              detail: { mode, resolved: resolveMode(mode) },
            })
          );
        }

        function apply(mode) {
          const resolved = resolveMode(mode);
          root.dataset.appearance = mode;

          // 更新 color-scheme
          root.style.colorScheme = resolved;

          // 使用 View Transition API 实现平滑切换（如果支持）
          const updateDOM = () => {
            if (resolved === "dark") {
              root.classList.add("dark");
            } else {
              root.classList.remove("dark");
            }
          };

          // 检查是否支持 View Transition API 且不是首次加载
          if (
            document.startViewTransition &&
            !root.dataset.initialLoad &&
            !window.matchMedia("(prefers-reduced-motion: reduce)").matches
          ) {
            document.startViewTransition(updateDOM);
          } else {
            updateDOM();
          }

          dispatch(mode);
        }

        function set(mode) {
          const next = isValid(mode) ? mode : "system";
          localStorage.setItem(STORAGE_KEY, next);
          apply(next);
        }

        window.__aozakiAppearance = {
          get: getStoredMode,
          set,
          apply,
        };

        mediaQuery.addEventListener("change", () => {
          if (getStoredMode() === "system") {
            apply("system");
          }
        });

        document.addEventListener("astro:after-swap", () => {
          apply(getStoredMode());
        });

        // 初始化时标记为首次加载，避免闪烁
        root.dataset.initialLoad = "true";
        apply(getStoredMode());

        // 移除首次加载标记
        requestAnimationFrame(() => {
          delete root.dataset.initialLoad;
        });
      })();
    </script>
  </head>
  <body>
    <slot />
    <SpeedInsights />
  </body>
</html>
